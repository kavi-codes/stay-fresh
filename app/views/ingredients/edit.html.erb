<div class="container py-4">
  <h2>Update</h2>
  <%= simple_form_for [@ingredient] do |f| %>
    <%= f.input :name %>
    <%= f.input :exp_date, as: :date, html5: true %>
    <%= f.input :category %>
    <%= f.input :quantity %>
    <%= f.input :comment %>
    <%= f.input :unit %>
    <%= f.button :submit, class:'btn-main my-2' %>
    <%= link_to 'Back to all ingredients', root_path, class: 'btn-main my-2' %>
  <% end %>
</div>
