  <%= simple_form_for [fridge, ingredient] do |f| %>
    <%= f.input :name %>
    <%= f.input :exp_date, as: :date, html5: true %>
    <%= f.input :category, as: :select, collection: ['Fruits & Veggies', 'Eggs & Dairy', 'Meat & Poultry', 'Seafood', 'others'], prompt: 'Select Category' %>
    <%= f.input :quantity %>
    <%= f.input :comment %>
    <%= f.input :unit %>
    <%= f.button :submit, class:'button-primary' %>
    <%= link_to 'Back to all ingredients', fridge_path(fridge), class: 'button-primary' %>
  <% end %>
